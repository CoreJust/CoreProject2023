import core.crt.cstdio;
import core.crt.cstdlib;

def main() i32 {
	u32 num = 1;
	while num {
		cstdio.fprintf(cstdio.stdout, c8*("\nEnter the seed: "));
		cstdio.scanf(c8*("%u"), &num);
		cstdlib.srand(num);
		cstdio.printf(c8*("\nThe random number is: %d"), cstdlib.rand());
	}
	
	cstdio.getchar();
	return 0;
}