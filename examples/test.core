import core.io.console;
import core.crt.cstdlib;

use console;

struct String {
	c8* data;
	u64 capacity;
	u64 size;

	@implicit
	def this(str8 str) {
		this.data = c8*(str.data);
		this.capacity = str.size;
		this.size = str.size;
	}
}

def main() i32 {
	String str = "Hello world";
	console.println(str.data);
	
	cstdlib.system("pause");
	return 0;
}