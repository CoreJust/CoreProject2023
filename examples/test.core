import core.io.console;
import core.dynamic_string;
import core.time.timer;
import core.crt.cfenv;

use console;
use dynamic_string;

def main() i32 {
	DynamicString str = "Hello ";
	str += "world from test";
	
	println(str.substr(3, 10));
	
	str.reverse();
	
	i32 i = 0;
	while i < str.size() {
		println(str[i]);
		i++;
	}
	
	println(str[str.find('r') + 1]);
	println(str.find('&'));
	println(str[i]);
	
	timer.Timer timer = timer.Timer();
	while (true) {
		if (timer.elapsedTimeAsSeconds() > 2.5) {
			println(*str);
			timer.restart();
		}
	}
	
	console.pause();
	return 0;
}