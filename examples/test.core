import core.io.console;
import core.dynamic_string;
import core.time.timer;
import core.crt.clocale;

use console;
use dynamic_string;

DynamicString g_str;

def main() i32 {
	clocale.setlocale(clocale.LC_ALL, "Rus");
	g_str = "Привет ";
	g_str += "мир из test";
	
	i32 i = 0;
	while i < g_str.size() {
		print(g_str[i]);
		print(" : ");
		println(u32(g_str[i]));
		i++;
	}
	
	timer.Timer timer = timer.Timer();
	while (true) {
		if (timer.elapsedTimeAsSeconds() > 2.5) {
			println(*g_str);
			timer.restart();
		}
	}
	
	console.pause();
	return 0;
}